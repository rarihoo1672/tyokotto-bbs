<%- @posts.each do |post| %>
  
  <h2>
    ユーザー：
    <%= post.user.name %>
  </h2>
  
  <p>
    ジャンル
    <%= post.tag.name %>
  </p>
    <p>
    タイトル
    <%= post.title %>
  </p>
  <% if post.image.present?%>
    <%= image_tag(post.image_url) %>
  <% else %>
    画像がありません
  <% end %>
  

  <p>
    制作日時 
    <%= post.created_at.to_s(:datetime) %>
  </p>

  <p>
    記事：
    <%= truncate(post.content, length: 20, omission: "・・・・") %>
  <%= link_to "記事詳細", tag_post_path(post.tag_id, post.id) %>
  </p>
<% end %>

<%= paginate @posts %>


<% if user_signed_in? %> 
  <div class="user">
    <p class="user--label">
      ログインユーザー名
    </p>
    <p class="user--name">
      <%= current_user.name %>
    </p>
    </p>
  </div>
<% end %>