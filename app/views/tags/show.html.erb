<h1>
  ジャンル：
  <%= @tag.name %>
</h1>

<% @posts.each do |post| %>
  <%= link_to  tag_post_path(post) do %>
    <p>
      ユーザー
      <%= post.user.name%>
    </p>  
    <h4>
    タイトル
      <%= post.title%>
    </h4>
    <p>
      <%= post.content %>
    </p>
    <p>
    日時
      <%= post.created_at.to_s(:datetime) %>
  <% end%>
<% end %>

<%= paginate @posts %>

